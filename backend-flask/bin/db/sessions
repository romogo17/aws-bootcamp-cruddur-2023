#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-sessions"
printf "${CYAN}=== ${LABEL}${NO_COLOR}\n"

if [ "$1" = "prod" ]; then
  echo "Running in production mode"
  URL=$REMOTE_DB_CONNECTION_URL
else
  URL=$LOCAL_DB_CONNECTION_URL
fi

NO_DB_URL=$(sed 's/\/cruddur//g' <<<"$URL")
psql $NO_DB_URL <<- EOF
    select 
        pid as process_id, 
        usename as user,  
        datname as db, 
        client_addr, 
        application_name as app,
        state 
    from pg_stat_activity;
EOF